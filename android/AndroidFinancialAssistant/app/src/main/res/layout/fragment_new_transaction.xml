<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:columnCount="3"
    tools:context="com.farzam.financialassistant.NewTransactionFragment">

    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/new_transaction_txt"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:textSize="18sp"
        android:text="@string/new_transaction_txt"/>
    <Space
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="30dp"/>

    <EditText
        android:id="@+id/new_transaction_title"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:inputType="textCapWords" />
    <TextView
        android:id="@+id/new_transaction_value"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:layout_column="0"
        android:textSize="18sp"
        android:text="@string/new_transaction_value"/>
    <Space
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="30dp"/>
    <EditText
        android:id="@+id/new_transaction_amount"
        android:layout_height="match_parent"
        android:layout_gravity="fill_horizontal"/>
    <TextView
        android:id="@+id/new_transaction_datelabel"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:textSize="18sp"
        android:text="@string/new_transaction_date"/>
    <Space
        android:layout_row="2"
        android:layout_column="1"
        android:layout_width="30dp"/>

    <EditText
        android:id="@+id/new_transaction_date"
        android:layout_height="match_parent"
        android:layout_gravity="fill_horizontal"
        android:focusable="false"/>

    <Button
        android:id="@+id/submit_transaction"
        android:text="@string/submit_transaction"
        android:layout_row="4"
        android:layout_columnSpan="3"
        android:layout_gravity="right"/>



</GridLayout>
